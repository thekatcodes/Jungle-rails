<section class="admin-categories-index">

    <header class="page-header"> 
        <h1>Admin &raquo; All Categories</h1>
    </header>

    <div class="well">
        <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
    </div>

    <div class="panel panel-default categorys">
        <table class="table table-bordered">
            <tbody>
                <div class="card text-center">
                <div class="card p-2">
                  <p class="mb-0">  <strong> Categories </strong> </p>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= render @categories %></p>
                </div>
                </div>
            </tbody>
        </table>
    </div>

</section>